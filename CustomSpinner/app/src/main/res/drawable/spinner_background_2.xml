<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#ffffff"
                        android:startColor="#ffffff"
                        android:type="linear" />

                    <stroke
                        android:width="1dp"
                        android:color="#4e5bad" />

                    <corners
                        android:radius="0dp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>

            <item>
                <!-- Background color -->
                <color android:color="#503f51b5" />
            </item>

            <item android:right="0dp">

                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/ic_spinner" />

            </item>

        </layer-list>

    </item>

</selector>