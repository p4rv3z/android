<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_main_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC0000"
    tools:context="bd.parvez.onlineradio.MainActivity">

    <RelativeLayout
        android:id="@+id/rel_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FF4444">

        <TextView
            android:id="@+id/tv_title_main_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/tv_title_main_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_main_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_main_1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:text="@string/tv_title_main_2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_main_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#FF4444"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_main_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/volume_up" />

        <SeekBar
            android:id="@+id/seekBar_main_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rel_main_record"
            android:layout_toRightOf="@+id/img_main_volume"
            android:layout_toStartOf="@+id/img_main_volume"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rel_main_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/rec_def">

            <ImageView
                android:id="@+id/img_main_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rec_ena" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_main_option"
        android:layout_below="@+id/rel_main_media">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="95"
                android:background="#FF4444">

                <bd.parvez.onlineradio.VisualizerView
                    android:id="@+id/myvisualizerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_title_main_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="Radio Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_main_new_activity"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:adjustViewBounds="false"
                android:background="@drawable/half_circle"
                android:src="@mipmap/new_activity" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_main_player"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#FF4444"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_main_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/alarm" />

        <ImageView
            android:id="@+id/img_main_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/img_main_alarm"
            android:src="@mipmap/sleep" />

        <ImageView
            android:id="@+id/img_main_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/img_main_sleep"
            android:src="@mipmap/fav_dis" />

        <ImageView
            android:id="@+id/img_main_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/img_main_fav"
            android:onClick="aboutDev"
            android:src="@mipmap/about" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/banner_ad"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#FF4444"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_main_previous"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_main_play"
            android:src="@mipmap/previous" />

        <ImageView
            android:id="@+id/img_main_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/play" />

        <ImageView
            android:id="@+id/img_main_next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_main_play"
            android:src="@mipmap/next" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_id_player" />
</RelativeLayout>
